page {
  background: #eef2f6;
}
view {
  display: block;
}
.box_h {
  display: flex;
  flex-direction: row;
}
.box_s {
  display: flex;
  width: 100%;
  flex-direction: column;
}
.center {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.center_s {
  display: flex;
  width: 100%;
  align-items: center;
}
.center_h {
  display: flex;
  width: 100%;
  justify-content: center;
}
.boxflex1 {
  flex: 1;
}
.boxflex2 {
  flex: 2;
}
.breakall {
  word-wrap: break-word;
  word-break: break-all;
}
.diandian {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.row {
  padding: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #333;
}
.notReadNumber {
  width: 100rpx;
  text-align: right;
}
.btnMain {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 50rpx;
  line-height: 60rpx;
}
.refreshBtn,
.searchBtn {
  background: #283043;
  width: 40%;
  margin: 0 5%;
  color: #eee;
  height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.searchBtn {
  background: #eee;
  color: #333;
}
