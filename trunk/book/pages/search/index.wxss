page {
  background: #eef2f6;
}
view {
  display: block;
}
.box_h {
  display: flex;
  flex-direction: row;
}
.box_s {
  display: flex;
  width: 100%;
  flex-direction: column;
}
.center {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.center_s {
  display: flex;
  width: 100%;
  align-items: center;
}
.center_h {
  display: flex;
  width: 100%;
  justify-content: center;
}
.boxflex1 {
  flex: 1;
}
.boxflex2 {
  flex: 2;
}
.breakall {
  word-wrap: break-word;
  word-break: break-all;
}
.diandian {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.search {
  height: 100rpx;
  background: #fff;
}
.search input {
  background: #eee;
  display: block;
  margin: 0 20rpx;
  height: 70rpx;
  padding: 0 20rpx;
}
.search_btn {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin-right: 20rpx;
}
.info {
  margin-top: 20rpx;
  background: #fff;
  font-size: 30rpx;
  padding: 20rpx;
}
.red {
  color: red;
}
.list {
  margin-top: 20rpx;
  background: #fff;
  font-size: 35rpx;
  padding: 20rpx;
}
.list_name {
  font-size: 40rpx;
}
.list_a {
  background: #ccc;
  padding: 0 20rpx;
  margin: 15rpx 0;
}
.search_btn:active,
.list:active {
  opacity: 0.6;
}
