<view class="detail_main1">
  <!--背景灰  view加class select-->
  <block wx:for="{{list}}" wx:key="index2">
    <view class="book_h_min1_list box_h center_s canClick">
      <view class="boxflex1 box_s">
        <view>{{item.name}}</view>
