<view class="index_main2 box_s">
  <block wx:for="{{bookList2}}" wx:key="main2">
    <view class="index_main2_row" wx:if="{{index==0}}">
      <view class="all_book_h box_h" data-id="{{item.id}}"><image  class="all_book_h_img" src="{{item.img}}" />
        <view class="boxflex1 box_s">
          <view class="all_book_h_name breakall">
            <view>{{item.name}}</view>
            <view class="all_book_h_free" style="display:{{(item.isFree)?'inline-block':'none'}};">免费</view>
            <view class="all_book_h_vip" style="display:{{(item.isVIP)?'inline-block':'none'}};">VIP</view>
          </view>
          <view class="all_book_h_info breakall">{{item.info}}</view>
          <view class="all_book_h_author">{{item.author}}</view>
        </view>
      </view>
    </view>
  </block>
  <view>
    <block wx:for="{{bookList2}}" wx:key="main2_">
      <block wx:if="{{index!=0}}">
        <view class="all_book box_s" data-id="{{item.id}}">
