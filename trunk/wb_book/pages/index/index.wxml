<view class="index_top box_s">
  <view class="index_top_logo"></view>
  <view class="index_top_search box_h center_s">
    <input class="boxflex1" type="search" placeholder="搜索" name="search" bindinput="searchInput" value="{{search}}" />
    <view class="index_top_btn"></view>
  </view>
</view>
<!--banner-->
<swiper class="index_banner" indicator-dots="true" autoplay="true" duration="1000" interval="5000" indicator-color="#fff" indicator-active-color="rgb(254,184,182)">
  <block wx:for="{{banner}}" wx:key="index">
    <swiper-item><image  src="{{item.imgSrc}}" data-url="{{item.url}}" mode="widthFix" bindtap="bannerTap" /></swiper-item>
  </block>
</swiper>
<!--导航条-->
<view class="index_dh box_h">
  <view class="index_dh_item box_s center"><image  src="#" />
    <view>读过</view>
  </view>
  <view class="index_dh_item box_s center"><image  src="#" />
    <view>书库</view>
  </view>
  <view class="index_dh_item box_s center"><image  src="#" />
    <view>排行</view>
  </view>
  <view class="index_dh_item box_s center"><image  src="#" />
    <view>免费</view>
  </view>
  <view class="index_dh_item box_s center"><image  src="#" />
    <view>充值</view>
  </view>
</view>
<!--间隔条-->
<view class="jg"></view>
<!--最近阅读-->
<view class="index_near">
  <view class="index_near_bottom box_h center_s">
    <view class="boxflex1">最近阅读</view>
    <view class="index_near_number">9544 人阅读</view>
  </view>
</view>
<!--最近主打-->
<view class="all_title box_h"><image  src="https://ss0.bdstatic.com/6ONWsjip0QIZ8tyhnq/it/u=3545401083,2251952841&fm=77&w_h=121_75&cs=2008984878,1171842780" />
  <view class="boxflex1 diandian center_s">
    <view class="all_title_info">本期主打</view>
  </view>
  <view class="all_show_more">查看全部<image  src="../../image/arrow.png" /></view>
</view>
<view class="index_main1 box_h">
  <view class="index_main1_item center" wx:for="{{bookList1}}" wx:key="main1">
    <view class="all_book box_s" data-id="{{item.id}}">
      <view class="all_image_body center"><image  src="{{item.img}}" /></view>
      <view class="all_book_name diandian">{{item.name}}</view>
      <view class="all_book_type diandian">{{item.typeName}}</view>
    </view>
  </view>
</view>
<!--间隔条-->
<view class="jg"></view>
<!--精品好书-->
